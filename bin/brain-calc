#! /usr/bin/env php

<?php

use function BrainGames\Cli\run;
use function BrainGames\Even\calcQuestion;
use function BrainGames\Even\calculate;

$loadPath1 = __DIR__ . '/../../../autoload.php';
$loadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($loadPath1)) {
    include_once $loadPath1;
} else {
    include_once $loadPath2;
}

$operations = ['+', '-', '*'];
$num1 = generate();
$num2 = generate();
$operation = $operations[array_rand($operations)];

$userValue = calcQuestion($num1, $num2, $operation);
$corAnswer = calculate($num1, $num2, $operation);
run($userValue, $corAnswer);