#! /usr/bin/env php

<?php

use function BrainGames\Cli\run;
use function BrainGames\Even\evenQuestion;
use function BrainGames\Even\isEven;
use function BrainGames\Generator\generate;

$loadPath1 = __DIR__ . '/../../../autoload.php';
$loadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($loadPath1)) {
    include_once $loadPath1;
} else {
    include_once $loadPath2;
}

$number = generate();

$userValue = evenQuestion($number);
$corAnswer = isEven($number);
run($userValue, $corAnswer);
